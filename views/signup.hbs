<div class="signup-container">
  <div class="signup">
    <div class="header-container">
      <div class="header">
        <a href='/'><span id="logo">TeamChat</span></a>
      </div>
    </div>
    <div class="form-container">
      <form>
        <div class="form-group">
          <label for="firstname">First Name</label><br />
          <input type="text" class="form-control" id="firstname" placeholder="Required" size="36">
        </div>

        <div class="form-group">
          <label for="lastname">Last Name</label><br />
          <input type="text" class="form-control" id="lastname" placeholder="Required" size="36">
        </div>

        <div class="form-group">
          <label for="email">Email</label><br />
          <input type="email" class="form-control" id="email" placeholder="Required" size="36">
        </div>

        <div class="form-group">
          <label for="password">Password</label><br />
          <input type="password" class="form-control" id="password" placeholder="Required" size="36">
        </div>

        <div class="form-group">
          <label for="passwordConfirmation">Password Confirmation</label><br />
          <input type="password" class="form-control" id="passwordConfirmation" placeholder="Confirm Your Password" size="36">
        </div>

        <div class="form-group">
          <button type="submit" id="signup-button" class="signup-button">Sign Up!</button>
        </div>
      </form>
    </div>
  </div>
</div>
