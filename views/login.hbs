<div class="login-container">
  <div class="login">
    <div class="header-container">
      <div class="header">
        <a href='/'><span id="logo">TeamChat</span></a>
      </div>
    </div>
    <div class="form-container">
      <form>
        <div class="form-group">
          <label for="email">Email</label><br />
          <input type="email" class="form-control" id="email" placeholder="Required" size="36">
        </div>

        <div class="form-group">
          <label for="password">Password</label><br />
          <input type="password" class="form-control" id="password" placeholder="Required" size="36">
        </div>

        <div class="form-group">
          <button type="submit" id="login-button" class="login-button">Log In!</button>
        </div>
      </form>
    </div>
  </div>
</div>
