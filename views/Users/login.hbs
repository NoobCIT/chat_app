<div class="login-container">
  <div class="login">
    <div class="header-container">
      <div class="header">
        <a href='/'><span id="logo">TeamChat</span></a>
      </div>
    </div>
    <div class="form-container">
      <form action="/login" method="post">
        <div class="form-group">
          <label>Email</label><br />
          <input type="email" name="email" class="form-control" id="email" placeholder="Required" size="36">
        </div>

        <div class="form-group">
          <label>Password</label><br />
          <input type="password" name="password" class="form-control" id="password" placeholder="Required" size="36">
        </div>

          {{#if messages.login}}
        <div class="flash-container">
            {{messages.login}}
        </div>
          {{else if messages.emptyLogin}}
        <div class="flash-container">
            {{messages.emptyLogin}}
        </div>
          {{/if}}

        <div class="form-group">
          <button type="submit" id="login-button" class="login-button">Log In!</button>
        </div>
      </form>
    </div>
  </div>
</div>
